#include <iostream>
using namespace std;

class College {
    int roll;
    string name, course;
public:
    College(int r, string n, string c = "Computer Engineering") {
        roll = r;
        name = n;
        course = c;
    }
    void show() {
        cout << roll << " " << name << " " << course << endl;
    }
};

int main() {
    College a(1, "A"), b(2, "B", "IT");
    a.show();
    b.show();
}


