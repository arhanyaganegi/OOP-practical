#include <iostream>
using namespace std;

class Demo {
    int x;
public:
    Demo() {
        x = 0;
        cout << x << endl;
    }
    Demo(int a) {
        x = a;
        cout << x << endl;
    }
    Demo(Demo &d) {
        x = d.x;
        cout << x << endl;
    }
};

int main() {
    Demo a, b(5), c(b);
}


