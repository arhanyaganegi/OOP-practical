#include <bits/stdc++.h>
using namespace std;

class Student {
    int roll_no;
    string name, cls;
public:
    void accept() {
        cout << "Enter roll_no name class: ";
        cin >> roll_no >> ws; getline(cin, name); getline(cin, cls);
    }
    void display() const {
        cout << "Roll: " << roll_no << "\nName: " << name << "\nClass: " << cls << '\n';
    }
};

int main() {
    Student s;
    s.accept();
    cout << "\n-- Student Details --\n";
    s.display();
}
b>
#include <bits/stdc++.h>
using namespace std;

class Book {
public:
    string name;
    double price;
    int pages;
    void accept() {
        cout << "Enter book_name, price, pages: ";
        getline(cin, name);
        cin >> price >> pages; cin.ignore(numeric_limits<streamsize>::max(), '\n');
    }
};

int main() {
    Book b1, b2;
    cout << "Book 1:\n"; b1.accept();
    cout << "Book 2:\n"; b2.accept();
    cout << "\nCostlier book: " << (b1.price >= b2.price ? b1.name : b2.name) << '\n';
}
c>
#include <bits/stdc++.h>
using namespace std;

class Time {
    int h{}, m{}, s{};
public:
    void acceptHHMMSS() {
        cout << "Enter time (HH:MM:SS): ";
        char c1, c2; cin >> h >> c1 >> m >> c2 >> s;
    }
    int toSeconds() const { return h*3600 + m*60 + s; }
};

int main() {
    Time t; t.acceptHHMMSS();
    cout << "Total seconds = " << t.toSeconds() << '\n';
}
2a>
#include <bits/stdc++.h>
using namespace std;

class City {
public:
    string name; long long population{};
    void accept() {
        cout << "Name and population: ";
        getline(cin, name); cin >> population; cin.ignore();
    }
};

int main() {
    const int N = 5;
    vector<City> v(N);
    for (int i=0;i<N;i++){ cout << "City " << i+1 << ":\n"; v[i].accept(); }
    auto it = max_element(v.begin(), v.end(),
        [](const City& a, const City& b){ return a.population < b.population; });
    cout << "Highest population: " << it->name << " (" << it->population << ")\n";
}
2b>
#include <bits/stdc++.h>
using namespace std;

class Account {
public:
    string acc_no; double balance{};
    void accept() {
        cout << "AccountNo and Balance: ";
        cin >> acc_no >> balance;
    }
    void addInterestIfEligible() { if (balance >= 5000) balance *= 1.10; }
    void display() const { cout << acc_no << " -> " << fixed << setprecision(2) << balance << '\n'; }
};

int main() {
    const int N = 10;
    vector<Account> a(N);
    for (int i=0;i<N;i++){ a[i].accept(); }
    cout << "\nAfter applying 10% interest (>=5000):\n";
    for (auto& x : a){ x.addInterestIfEligible(); x.display(); }
}
2c>#include <bits/stdc++.h>
using namespace std;

struct Staff {
    string name, post;
    void accept(){ cout << "Name: "; getline(cin,name); cout << "Post: "; getline(cin,post); }
};

int main() {
    const int N = 5; vector<Staff> s(N);
    for(int i=0;i<N;i++){ cout << "Staff " << i+1 << '\n'; s[i].accept(); }
    cout << "\nHODs:\n";
    for (auto& x : s){
        string p = x.post; for(char& c: p) c = tolower(c);
        if (p == "hod") cout << x.name << '\n';
    }
}
