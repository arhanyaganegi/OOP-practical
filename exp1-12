#include <iostream>
#include <fstream>
#include <string>
using namespace std;

int main() {
    ifstream f("file.txt");
    string w, find;
    int count = 0;
    cin >> find;
    while (f >> w) {
        if (w == find)
            count++;
    }
    cout << count;
}


10a

#include <iostream>
using namespace std;

template <class T>
T sum(T a[], int n) {
    T s = 0;
    for (int i = 0; i < n; i++)
        s += a[i];
    return s;
}

int main() {
    int a[5];
    for (int i = 0; i < 5; i++)
        cin >> a[i];
    cout << sum(a, 5);
}


