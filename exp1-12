#include <bits/stdc++.h>
using namespace std;

class Student {
    int roll; double percentage;
public:
    Student& accept(){ cout << "Roll and Percentage: "; cin >> roll >> percentage; return *this; } // return *this
    const Student& display() const { cout << "Roll: " << roll << ", %: " << percentage << '\n'; return *this; }
};

int main() {
    Student().accept().display(); // chained via 'this'
}
3c>
#include <bits/stdc++.h>
using namespace std;

class Outer {
    int secret{42};
public:
    class Inner {
    public:
        void showOuter(const Outer& o) { // needs an Outer object
            cout << "Outer.secret = " << o.secret << '\n';
        }
    };
};

int main() {
    Outer o; Outer::Inner in;
    in.showOuter(o);
}
4a>
#include <bits/stdc++.h>
using namespace std;

class Result1 { public: double marks{}; void read(){ cout << "Result1 marks: "; cin >> marks; } };
class Result2 { public: double marks{}; void read(){ cout << "Result2 marks: "; cin >> marks; } };

double average(Result1 r1, Result2 r2){ return (r1.marks + r2.marks) / 2.0; }

int main() {
    Result1 r1; Result2 r2; r1.read(); r2.read();
    cout << "Average = " << average(r1, r2) << '\n';
}
4b>
#include <bits/stdc++.h>
using namespace std;

class A; class B;

int greatest(const A&, const B&); // forward

class A { int n; public: A(int x=0):n(x){} friend int greatest(const A&, const B&); };
class B { int n; public: B(int x=0):n(x){} friend int greatest(const A&, const B&); };

int greatest(const A& a, const B& b){ return a.n > b.n ? a.n : b.n; }

int main(){
    int x,y; cout << "Enter two numbers:\n"; cin >> x >> y;
    A a(x); B b(y);
    cout << "Greatest = " << greatest(a,b) << '\n';
}
4c>
#include <bits/stdc++.h>
using namespace std;

class Sample {
    int val;
public:
    Sample(int v=0):val(v){}
    friend void swapValues(Sample& a, Sample& b);
    void show() const { cout << val << ' '; }
};

void swapValues(Sample& a, Sample& b){ std::swap(a.val, b.val); }

int main() {
    Sample s1(10), s2(99);
    cout << "Before: "; s1.show(); s2.show(); cout << '\n';
    swapValues(s1, s2);
    cout << "After:  "; s1.show(); s2.show(); cout << '\n';
}
5a

#include <iostream>
using namespace std;

class Sum {
    int n, s;
public:
    Sum(int x) {
        n = x;
        s = 0;
        for (int i = 1; i <= n; i++)
            s += i;
        cout << s;
    }
};

int main() {
    int n;
    cin >> n;
    Sum a(n);
}


