#include <iostream>
using namespace std;

class Num {
    int n;
public:
    Num(int a) { n = a; }
    void operator ++() { ++n; }
    void operator ++(int) { n++; }
    void show() { cout << n; }
};

int main() {
    Num a(5);
    a++;
    ++a;
    a.show();
}


8a

#include <iostream>
#include <string>
using namespace std;

class Concat {
    string s;
public:
    Concat(string a = "") { s = a; }
    Concat operator +(Concat b) {
        return Concat(s + b.s);
    }
    void show() { cout << s; }
};

int main() {
    Concat a("xyz"), b("pqr"), c;
    c = a + b;
    c.show();
}


