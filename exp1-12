#include <iostream>
#include <string>
using namespace std;

class ILogin {
protected:
    string name, pwd;
public:
    virtual void accept() {
        cin >> name >> pwd;
    }
};

class EmailLogin : public ILogin {
public:
    void accept() {
        cin >> name >> pwd;
    }
};

class MemberLogin : public ILogin {
public:
    void accept() {
        cin >> name >> pwd;
    }
};

int main() {
    EmailLogin e;
    MemberLogin m;
    e.accept();
    m.accept();
}


