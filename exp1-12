#include <iostream>
using namespace std;

class Student {
    string n;
    float p;
public:
    Student(string a, float b) {
        n = a;
        p = b;
    }
    void show() {
        cout << n << " " << p;
    }
};

int main() {
    string n;
    float p;
    cin >> n >> p;
    Student s(n, p);
    s.show();
}


