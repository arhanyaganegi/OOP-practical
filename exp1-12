9b

#include <iostream>
#include <fstream>
using namespace std;

int main() {
    ifstream f("file.txt");
    char c;
    int d = 0, s = 0;
    while (f.get(c)) {
        if (isdigit(c)) d++;
        if (isspace(c)) s++;
    }
    cout << d << " " << s;
}


