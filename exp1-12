#include <bits/stdc++.h>
using namespace std;

class Book {
    string title, author; double price{};
public:
    void accept(){ cout << "Title: "; getline(cin,title); cout << "Author: "; getline(cin,author); cout << "Price: "; cin >> price; }
    void display() const{ cout << "Title: " << title << "\nAuthor: " << author << "\nPrice: " << price << '\n'; }
};

int main() {
    Book b, *ptr = &b;
    ptr->accept();
    cout << "\n-- Book --\n";
    ptr->display();
}
